** Button: move active signpost up/down
scrp 1 1 21841 1001

	doif ov00 eq 0
		stop
	endi

	setv va00 _p1_

	inst

	seta va50 null
* Get the active signpost	
	enum 1 4 0
		doif ov00 eq 1
			seta va50 targ

		endi
	next

	doif va50 ne null
		targ va50
		setv va10 ov50

* up button: move left
		doif va00 eq 3

* check if not leftmost
			doif ov50 eq 0
				stop
			endi


			mesg writ pntr 101


* make the signpost at the left go right
			setv va01 ov50
			subv va01 1
			enum 1 4 0
				doif ov50 eq va01
					addv ov50 1
				endi
			next

* go left!
			targ va50
			subv ov50 1

			rtar 1 1 225
			subv ov00 1

		endi




* down button: move right
		doif va00 eq 4

* check if not rightmost
			setv va30 game "ds_favourites"
			subv va30 1
			doif ov50 eq va30
				stop
			endi

			mesg writ pntr 101


* make the signpost at the right go left
			setv va01 ov50
			addv va01 1
			enum 1 4 0
				doif ov50 eq va01
					subv ov50 1
				endi
			next

* go right!
			targ va50
			addv ov50 1
			rtar 1 1 225
			addv ov00 1

		endi


		enum 1 4 0
			tick 1
		next


	endi
endm




