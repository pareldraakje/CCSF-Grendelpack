*************Icon timer 
scrp 1 4 0 9
	inst
** Set variables
	setv va01 post
	setv va99 wndt
	setv va98 wndw

	subv va01 va99
*		set tick
	tick 50

** Check for gaps
	setv va70 0
	setv va71 game "ds_favourites"
	setv va70 totl 1 4 0

** There are gaps!
	doif va70 lt va71

		setv va73 0

		loop
			setv va74 -1
			setv va75 0
			enum 1 4 0
				doif ov50 eq va73
					setv va74 spcs
				endi
			next

			doif va74 eq -1
				enum 1 4 0
					doif ov50 gt va73
						subv ov50 1
					endi
				next
			endi

			addv va73 1
		untl va73 ge va71
	endi



*	if you're close enough to the top ...
	doif va01 lt 30 or vely eq 0

* calculate amount of icons per row
		setv va05 0
		enum 1 4 0
			addv va05 1
		next

* odd rows
		setv va20 va98
		subv va20 109
		divv va20 45
		setv va21 ftoi va20
		doif va21 ge va20
			subv va21 1
		endi

		doif va21 lt 2
			setv va21 2
		endi

* even rows
		setv va22 va21
		subv va22 1

* 		calculate the number of the row
		setv va30 ov50
		setv va31 0
		setv va32 0
		setv va33 -1

* Find the position in the row
		loop
			subv va30 va31
			doif va32 eq 0
				setv va32 1
				setv va31 va21
			else
				setv va32 0
				setv va31 va22
			endi

			addv va33 1
		untl va30 lt va31


*		calc offset from the left
		setv va09 va30
		mulv va09 45

		doif va32 eq 1
			addv va09 145
		else
			addv va09 169
		endi

		setv va07 va06
		divv va07 va05

*		calc offset from the top
		setv va08 va33
		mulv va08 39



*		
*		this gives you float position	
		flto va09 va08

*		set velocity variables to 0
		velo 0 0
		setv ov99 0
		setv va00 0


	else
*		otherwise carry on moving
		setv va00 -10
		velo ov99 va00
		negv ov99
		tick 1
	endi
endm
